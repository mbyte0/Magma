  "version": "0.2.0",
  "configurations": [

    {
      "name": "Launch Sandbox (Debug)",
      "type": "cppdbg",
      "request": "launch",
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/bin/debug",
      "environment": [],
      "linux": {
        "program": "${workspaceFolder}/bin/debug/Sandbox",
        "externalConsole": false
      },
      "windows": {
        "type": "cppvsdbg",
        "program": "${workspaceFolder}/bin/debug/Sandbox.exe",
        "console": "integratedTerminal"
      },
    }

  ]
}

